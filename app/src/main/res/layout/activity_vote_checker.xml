<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cloney42.avalonapp.VoteChecker">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Double Fail"
        android:id="@+id/doubleFail"
        android:checked="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:contextClickable="false"
        android:longClickable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pass"
        android:id="@+id/passButton"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/doubleFail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fail"
        android:id="@+id/failButton"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/passButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote"
        android:id="@+id/voteButton"
        android:layout_below="@+id/failButton"
        android:layout_marginTop="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Vote"
        android:id="@+id/checkVoteButton"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/voteButton"
        android:layout_alignParentStart="true" />
</RelativeLayout>
